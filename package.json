{
  "name": "ai-assistant",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "web:dev": "turbo dev --filter=web --filter=backend",
    "backend:dev": "turbo dev --filter=backend",
    "desktop:dev": "turbo dev --filter=desktop",
    "mobile:dev": "turbo dev --filter=mobile",
    "backend:build": "turbo build --filter=backend",
    "backend:start": "turbo start --filter=backend",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter @repo/ui ui:add",
    "gen": "turbo gen workspace"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.3.2",
    "turbo": "2.0.6",
    "typescript": "5.4.3"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=18"
  }
}
